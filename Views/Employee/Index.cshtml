@model IEnumerable<ZeroHunger.DB.Request>

@{
    ViewBag.Title = "All Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Request</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Description</th>
                <th>Date</th>
                <th>Status</th>
                <th>Restaurant Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@Html.DisplayFor(modelItem => item.Restaurant.Name)</td>
                    <td>
                        @if (item.Status == "Employee is coming for collect the food")
                        {
                            @Html.ActionLink("Pick the food", "Pick", new { id = item.Id }, new { @class = "btn btn-primary" })
                        }
                        else if (item.Status == "Employee is picked the food")
                        {
                            @Html.ActionLink("Delivered to ZeroHunger", "DeliverReq", new { id = item.Id }, new { @class = "btn btn-success" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Custom CSS */
    h2 {
        margin-top: 20px;
        margin-bottom: 20px;
        font-weight: bold;
        text-align: center;
        color: #5cb85c;
    }

    /* Bootstrap classes */
    .table {
        margin-bottom: 0;
    }

    .table-responsive {
        margin-top: 20px;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .btn {
        font-size: 14px;
        padding: 6px 12px;
    }

    .btn-primary {
        background-color: #5cb85c;
        border-color: #5cb85c;
    }

        .btn-primary:hover {
            background-color: #4cae4c;
            border-color: #4cae4c;
        }

    .btn-success {
        background-color: #337ab7;
        border-color: #337ab7;
    }

        .btn-success:hover {
            background-color: #286090;
            border-color: #286090;
        }
</style>
